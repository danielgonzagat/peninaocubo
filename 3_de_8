#!/usr/bin/env python3
# -*- coding: utf-8 -*-
"""Compatibility wrapper for the renamed PENIN-Î© acquisition module.

This file keeps backward compatibility with the legacy ``3_de_8`` entry point
by delegating all functionality to :mod:`penin_omega_3_acquisition`.
"""
from __future__ import annotations

import importlib
import runpy
import warnings

_impl = importlib.import_module("penin_omega_3_acquisition")

_names = getattr(_impl, "__all__", None)
if _names is None:
    _names = [name for name in dir(_impl) if not name.startswith("_")]

__all__ = list(_names)
globals().update({name: getattr(_impl, name) for name in __all__})

warnings.warn(
    "Module '3_de_8' has been renamed to 'penin_omega_3_acquisition'. "
    "Please update your imports.",
    DeprecationWarning,
    stacklevel=2,
)

if __name__ == "__main__":
    runpy.run_module("penin_omega_3_acquisition", run_name="__main__")
