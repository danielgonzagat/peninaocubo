#!/usr/bin/env python3
# -*- coding: utf-8 -*-
"""Compatibility wrapper for the renamed PENIN-Î© mutation module.

Delegates execution and exports to :mod:`penin_omega_4_mutation` while warning
consumers about the legacy name.
"""
from __future__ import annotations

import importlib
import runpy
import warnings

_impl = importlib.import_module("penin_omega_4_mutation")

_names = getattr(_impl, "__all__", None)
if _names is None:
    _names = [name for name in dir(_impl) if not name.startswith("_")]

__all__ = list(_names)
globals().update({name: getattr(_impl, name) for name in __all__})

warnings.warn(
    "Module '4_de_8' has been renamed to 'penin_omega_4_mutation'. "
    "Please update your imports.",
    DeprecationWarning,
    stacklevel=2,
)

if __name__ == "__main__":
    runpy.run_module("penin_omega_4_mutation", run_name="__main__")
